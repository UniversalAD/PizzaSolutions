@model PizzaSolutions.Models.ProductForm

<div class="modal productModal fade" id="ProductModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Knead Gear?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        @using (Html.BeginForm("_ProductForm", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "productForm" }))
                        {
                            @Html.AntiForgeryToken();
                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required", type = "email" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ProductPhone, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.ProductPhone, new { @class = "form-control", required = "required" })
                                    <p id="productPhoneStatus"></p>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CompanyName, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", required = "required" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.WebsiteFacebook, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.WebsiteFacebook, new { @class = "form-control", required = "required", type = "url" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Product, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Product, new { @class = "form-control", @readonly = "true" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Color, new { @class = "form-label", id = "ColorLabel" })
                                    @Html.TextBoxFor(m => m.Color, new { @class = "form-control", @readonly = "true" })
                                    @Html.LabelFor(m => m.LogoColor, new { @class = "form-label", @readonly="true", id = "LogoColorLabel" })
                                    @Html.TextBoxFor(m => m.LogoColor, new { @class = "form-control", @readonly = "true" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.File, new { @class = "form-label" })
                                    @Html.TextBox("file", "", new { type = "file" })
                                </div>
                                <div class="form-group">
                                    <div class="col-md-4 no-gutters">
                                        <input type="submit" class="btn btn-default" id="submit" value="Send" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <img class="ModalProductsImage relative img-responsive" src="" />
                        <img src="" class="product-logo img-responsive" />
                        <div class="row">
                            <div class="col-lg-12 center-block">
                                <ul>
                                    <li class="color-pick red" id="red"></li>
                                    <li class="color-pick gray" id="gray"></li>
                                    <li class="color-pick black" id="black"></li>
                                    <li class="color-pick white" id="white"></li>
                                    <li class="color-pick green" id="green"></li>
                                    <li class="color-pick canvas" id="canvas"></li>
                                    <li class="color-pick blue" id="blue"></li>
                                    <li class="color-pick orange" id="orange"></li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <p class="text-center">We have a wonderful art department that will build your proof absolutely free and send it to your approval before we print your new products.Thank you and we look forward to working with you!</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
