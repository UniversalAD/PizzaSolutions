@model PizzaSolutions.Models.ProductForm

<div class="modal productModal fade" id="ProductModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Knead Gear?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        @using (Html.BeginForm("_ProductForm", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "productForm" }))
                        {
                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required", type = "email" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Phone, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", required = "required", type = "phone" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CompanyName, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Color, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Color, new { @class = "form-control" })
                                    @Html.LabelFor(m => m.LogoColor, new { @class="form-label"})
                                    @Html.TextBoxFor(m => m.LogoColor, new { @class="form-control"})
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Quantity, new { @class = "form-label" })
                                    @Html.DropDownListFor(m => m.Quantity, Enumerable.Range(1, 50).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }))
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.File, new { @class = "form-label" })
                                    @Html.TextBox("file", "", new { type = "file" })
                                </div>
                                <div class="form-group">
                                    <div class="col-md-2">
                                        <input type="submit" class="btn btn-default" id="submit" value="Send" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <img class="ModalProductsImage relative img-responsive" src="" />
                        <img src="" class="product-logo img-responsive" />
                        <div class="row">
                            <div class="col-lg-12 center-block">
                                <ul>
                                    <li class="color-pick red" id="red"></li>
                                    <li class="color-pick gray" id="gray"></li>
                                    <li class="color-pick black" id="black"></li>
                                    <li class="color-pick white" id="white"></li>
                                    <li class="color-pick green" id="green"></li>
                                    <li class="color-pick canvas" id="canvas"></li>
                                    <li class="color-pick blue" id="blue"></li>
                                    <li class="color-pick orange" id="orange"></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
