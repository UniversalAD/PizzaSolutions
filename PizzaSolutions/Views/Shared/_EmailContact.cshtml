@model PizzaSolutions.Models.ContactEmail

<section class="contact-email" id="contactUs">
    <div class="row">
        @using (@Html.BeginForm("_EmailContact", "Home", FormMethod.Post, new { @id = "emailContact" }))
        {
            @Html.AntiForgeryToken();
            <div class="col-lg-8 center-block">
                <h3 class="text-center font-white">Contact Us</h3>
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Phone, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", required = "required", placeholder = "XXX-XXX-XXXX", type="phone", id="Phone" })
                            <p id="spnPhoneStatus"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required", placeholder = "youremail@emailEXT.com", type = "email" })
                            <p id="error"></p>
                            <p id="success"></p>
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Website, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Website, new { @class = "form-control", type = "url" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.LabelFor(m => m.Message, new { @class = "form-label" })
                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12 col-md-6">
                            <p>Do you prefer a phone call or email?</p>
                        </div>
                        <div class="col-xs-4 col-md-3 col-md-pull-2">
                            @Html.LabelFor(m => m.PhoneContact, new { @class = "form-label" })
                            @Html.CheckBoxFor(m => m.PhoneContact)
                        </div>
                        <div class="col-xs-4 col-md-3 col-md-pull-4">
                            @Html.LabelFor(m => m.EmailContact, new { @class = "form-label" })
                            @Html.CheckBoxFor(m => m.EmailContact)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            <input type="submit" class="btn btn-default submit" value="Send" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>  
