@model PizzaSolutions.Models.FreeAdContact

<section class="free-ad-contact">
    @using (Html.BeginForm("_FreeAdContact", "Home", FormMethod.Post, new { id = "freeAdContact" }))

    {
        @Html.AntiForgeryToken()
        //HtmlHelper.UnobtrusiveJavaScriptEnabled = false;

        <div class="row">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        @Html.LabelFor(m => m.AdName, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.AdName, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        @Html.LabelFor(m => m.AdEmail, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.AdEmail, new { @class = "form-control", required = "required", type = "email" })
                        @Html.ValidationMessageFor(m => m.AdEmail, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        @Html.LabelFor(m => m.AdCompany, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.AdCompany, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        @Html.LabelFor(m => m.AdPhone, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.AdPhone, new { @class = "form-control", required = "required", type = "phone" })
                        <p id="adPhoneStatus"></p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        @Html.LabelFor(m => m.AdAddress, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.AdAddress, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        @Html.LabelFor(m => m.AdCity, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.AdCity, new { @class = "form-control", required = "required" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        @Html.LabelFor(m => m.AdState, new { @class = "form-label" })
                        @Html.DropDownListFor(m => m.AdState, PizzaSolutions.Models.Extensions.GetStatesList(), new { @class = "form-control", required = "required" })
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        @Html.LabelFor(m => m.AdZip, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.AdZip, new { @class = "form-control", required = "required", type="zip" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">
                        <input type="submit" class="btn btn-default" id="submit" value="Send" />
                    </div>
                </div>
            </div>
        </div>

    }
</section>

