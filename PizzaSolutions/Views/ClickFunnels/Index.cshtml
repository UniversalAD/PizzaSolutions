@model PizzaSolutions.Models.FreeMagnets

@{
    ViewBag.Title = "Index";
}

<section class="funnel-heading">
    <div class="row">
        <div class="col-md-10 center-block">
            <h1 class="text-center">
                Advertise Your Pizzeria <span>All Over Town... All Year 'Round</span> Without Ever Spending a Dime!
            </h1>
        </div>
    </div>
</section>

<section class="funnel-form">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <video width="450" height="350" controls>
                <source src="" />
            </video>
            <h2 class="text-center">"Keep your dough... We don't knead it."</h2>
            <p class="text-center">These Are FREE MAGNETS For Your Restaurant To Pass Out and Distribute With Every Order.. To Every Customer.</p>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <h3>Sign up below.</h3>
            @using (@Html.BeginForm("FreeMagnets", "ClickFunnels"))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.FirstLastName, new { @class = "form-control", required = "required", placeholder = "First & Last Nane" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required", type = "email", placeholder = "Your Email" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.RestaurantName, new { @class="form-control", placeholder="Restaurant Name"})
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.JobTitle, new { @class="form-control", placeholder="Your Position"})
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.CompanyWebsite, new { @class="form-control", required="required", type="url", placeholder="Website or Facebook URL"})
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.AvgNumDel, new { @class = "form-control", placeholder="Avg. # of Deliveries Per Week" })
                    </div>
                    <div class="form-group">
                        <button type="submit" value="send" class="btn orange">Send Me My Free Magnets!</button>
                        <p class="text-center"><small>Enter your information above to get started!</small></p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
